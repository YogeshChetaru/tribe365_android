<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".UI.Home.Actions.Act_ActionComment">
    <include layout="@layout/app_bar" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_padding_half"
            android:layout_marginStart="@dimen/activity_margin_big"
            android:layout_marginEnd="@dimen/activity_margin_big"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_padding_half">
                <include layout="@layout/row_actionlist" />
            </LinearLayout>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:background="@drawable/card_bg_light_white"
               >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight=".80"
                    android:hint="Type your comment"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="@dimen/activity_padding_medium"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/text_size_normal"
                    android:backgroundTint="@color/white"
                    android:padding="@dimen/activity_padding_half"
                    android:textColor="@color/textcolorsecondary"
                    tools:ignore="Autofill,HardcodedText" />

                <TextView
                    android:id="@+id/tv_send"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".20"
                    android:background="@color/colorPrimary"
                    android:gravity="center|center_vertical"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingLeft="@dimen/activity_margin_half"
                    android:paddingTop="@dimen/selected_text_size"
                    android:paddingRight="@dimen/activity_margin_half"
                    android:paddingBottom="@dimen/selected_text_size"
                    android:textSize="@dimen/text_size_medium"
                    android:text="SEND"
                    android:textColor="@color/white"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="COMMENTS"
                android:textSize="@dimen/text_size_big"
                tools:ignore="HardcodedText" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:background="@drawable/card_bg_light_white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_margin_quarter">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_padding_half"
                android:layout_marginTop="@dimen/activity_padding_half"
                android:layout_marginEnd="@dimen/activity_padding_half"
                android:layout_marginBottom="@dimen/activity_padding_half"
                >

            </androidx.recyclerview.widget.RecyclerView>
                    <TextView
                        android:id="@+id/no_action_found_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|center"
                        android:layout_margin="@dimen/activity_padding_medium"
                        android:textColor="@color/textcolorsecondary"
                        android:textSize="@dimen/text_size_small"
                        android:text="@string/no_action_added_yet"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>