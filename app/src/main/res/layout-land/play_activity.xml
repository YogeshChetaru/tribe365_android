<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/dark_grey"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UI.AppTour.Play_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/top_text_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_grey">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin_very_big"
            android:layout_marginEnd="@dimen/activity_margin_very_big"
            app:cardBackgroundColor="@color/dark_grey"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_margin_half"
                    android:paddingBottom="@dimen/activity_margin_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back_image"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_arrow_back_24" />

                        <TextView
                            android:id="@+id/title_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/activity_padding_half"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/app_name"
                            android:textAllCaps="true"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_big" />

                        <ImageView
                            android:id="@+id/close_image"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/sub_title_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/border_color"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/text_show_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/player_colorTransparent"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_margin_half"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/text_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:fontFamily="@font/roboto"
                            android:scrollbars="vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_video_link"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/text_desc"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:layout_weight=".3"
                            android:background="@drawable/round_bt_red"
                            android:gravity="center"
                            android:text="@string/link"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_big"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/video_player_view_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rouned_corner_shadow"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.google.android.youtube.player.YouTubePlayerView
                            android:id="@+id/youtube_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/bottom_text_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />
    </LinearLayout>

</LinearLayout>