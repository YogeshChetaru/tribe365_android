<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
    android:background="@drawable/card_bg_light_white"
    android:outlineSpotShadowColor="@color/card_light_shadow"
    android:layout_marginStart="@dimen/activity_margin_quarter"
    android:layout_marginEnd="@dimen/activity_margin_quarter"
    android:layout_marginBottom="@dimen/activity_padding_medium"
    android:layout_marginTop="@dimen/activity_padding_medium"
        app:cardCornerRadius="@dimen/activity_margin_half"
    tools:targetApi="p">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_margin_quarter"
                android:layout_marginBottom="@dimen/activity_margin_quarter"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/ll_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/activity_padding_medium"
                    android:paddingEnd="@dimen/activity_padding_medium"
                    android:paddingTop="@dimen/activity_padding_half"
                    android:paddingBottom="@dimen/activity_padding_half"
                    android:weightSum="1"
                    tools:ignore="DisableBaselineAlignment,RtlSymmetry">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="40dp"
                        android:layout_height="40dp">

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rect_solid_black_border"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitCenter" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/activity_padding_medium"
                        android:layout_marginEnd="@dimen/activity_padding_medium"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_quarter"
                            android:layout_marginEnd="@dimen/activity_margin_quarter"
                            >

                            <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:ellipsize="end"
                                android:fontFamily="@font/roboto"
                                android:maxLines="2"
                                android:text="@string/app_name"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_medium"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/roboto"
                                android:text="2018-08-10"
                                android:textSize="@dimen/text_size_very_small"
                                android:visibility="gone"
                                tools:ignore="HardcodedText,SmallSp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/activity_margin_quarter"
                            android:layout_marginEnd="@dimen/activity_margin_quarter">

                            <TextView
                                android:id="@+id/tv_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/roboto"
                                android:gravity="start"
                                android:text="2018-08-10"
                                android:textAlignment="textStart"
                                android:textColor="@color/textcolorsecondary"
                                android:textSize="@dimen/text_size_small"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/tv_location"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:maxLines="1"
                                android:text="description"
                                android:textColor="@color/textcolorsecondary"
                                android:textSize="@dimen/text_size_very_small"
                                android:visibility="gone"
                                tools:ignore="HardcodedText,SmallSp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_padding_medium"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_sendQuery"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_medium"
                                android:background="@drawable/round_bt_red"
                                android:gravity="center"
                                android:text="SEND QUERY"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_very_small"
                                android:visibility="gone"
                                tools:ignore="HardcodedText,SmallSp" />

                            <TextView
                                android:id="@+id/tv_message"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/rnd_bt_primary"
                                android:gravity="center"
                                android:fontFamily="@font/roboto"
                                android:paddingStart="3dp"
                                android:paddingTop="5dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="5dp"
                                android:text="RESEND"
                                android:textSize="@dimen/text_size_very_small"
                                android:visibility="gone"
                                tools:ignore="HardcodedText,SmallSp" />


                        </LinearLayout>


                        <LinearLayout
                                android:id="@+id/card_status_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/activity_margin_quarter"
                            android:paddingTop="@dimen/activity_margin_quarter"
                            android:paddingBottom="@dimen/activity_margin_quarter"
                                android:paddingStart="@dimen/activity_margin_quarter"
                                android:paddingEnd="@dimen/activity_margin_quarter"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/status_tv"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_size_normal"
                                    android:includeFontPadding="false"
                                    android:fontFamily="@font/roboto"
                                    android:paddingTop="@dimen/activity_margin_quarter"
                                    android:paddingBottom="@dimen/activity_margin_quarter"
                                    android:paddingStart="@dimen/activity_padding_half"
                                    android:paddingEnd="@dimen/activity_padding_half"
                                    android:textColor="@color/yellow_dark_text">

                                </TextView>

                            </LinearLayout>



                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

    </androidx.cardview.widget.CardView>


