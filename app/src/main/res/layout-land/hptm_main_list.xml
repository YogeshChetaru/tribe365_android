<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:background="@drawable/bg_solid_grey_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_padding_medium"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:padding="@dimen/activity_padding_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_hptm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_margin_quarter"
            android:layout_marginTop="@dimen/activity_margin_quarter"
            android:layout_marginEnd="@dimen/activity_margin_quarter"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="@dimen/activity_padding_medium"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_desc_hptm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin_quarter"
                android:layout_marginBottom="@dimen/activity_padding_medium"
                android:layout_marginStart="@dimen/activity_margin_quarter"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:fontFamily="@font/roboto"
                android:layout_gravity="start|center_vertical"
                android:gravity="center"
                android:padding="@dimen/activity_margin_quarter"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_medium" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:background="@color/red"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/activity_margin_quarter"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:layout_marginStart="@dimen/activity_margin_half"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.chetaru.tribe365_new.utility.customView.AutoResizeTextView
                        android:id="@+id/tv_completion_hptm"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/textcolor"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/activity_margin_quarter"
                        android:layout_marginEnd="@dimen/activity_margin_quarter"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:ellipsize="none"
                        android:singleLine="true"
                        android:text="Completion score -"
                        android:textSize="113sp"
                        app:autoSizeTextType="uniform"
                        tools:targetApi="o"
                        />
                    <com.chetaru.tribe365_new.utility.customView.AutoResizeTextView
                        android:id="@+id/tv_team_hptm"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/textcolor"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/activity_margin_quarter"
                        android:layout_marginEnd="@dimen/activity_margin_quarter"
                        android:layout_marginBottom="@dimen/activity_padding_medium"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:ellipsize="none"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:text="Team Feedback -"
                        android:textSize="113sp"
                        app:autoSizeTextType="uniform"
                        tools:targetApi="o"
                        />

                </LinearLayout>

            </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>