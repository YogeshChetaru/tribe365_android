<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:layout_marginEnd="10dp"
            android:text="Today 9:35 PM"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_small" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/frag_profile_im"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/frag_profile_im"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/right_bubble_drawable"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_normal"
                android:text="msg"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/iv_msgImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/right_bubble_drawable"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location_grey"
                android:transitionName="MyTransition" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tv_chat_titleName_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_margin_12"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_chat_time_L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_L"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_margin_12"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="Today 9:35 PM"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_small"
            tools:ignore="SmallSp" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/frag_profile_im_L"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chat_titleName_L"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_msg_L"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/frag_profile_im_L"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_quarter"
                android:background="@drawable/left_bubble_drawable"
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/text_size_normal"
                android:text="msg"
                android:textColor="@color/textcolor" />

            <ImageView
                android:id="@+id/iv_msgImg_L"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/left_bubble_drawable"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location_grey"
                android:transitionName="MyTransition" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
