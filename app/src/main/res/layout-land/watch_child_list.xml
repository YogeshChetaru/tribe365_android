<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_padding_medium"
        android:layout_marginEnd="@dimen/activity_padding_medium"
        android:padding="@dimen/activity_margin_quarter"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/image_option"
        android:layout_gravity="start|top"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_margin="@dimen/activity_padding_medium"
        android:padding="@dimen/activity_margin_quarter"
        android:src="@drawable/circle_unchecked"
        android:contentDescription="@string/app_name"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/show_main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_quarter"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/activity_margin_quarter"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_medium" />
            <TextView
                android:id="@+id/tv_desc_watch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_quarter"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="@dimen/activity_margin_quarter"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_medium"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_padding_medium"
            android:paddingStart="@dimen/activity_margin_quarter"
            android:paddingEnd="@dimen/activity_margin_quarter"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:background="@color/border_color_opacity"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginEnd="@dimen/activity_margin"/>
            <LinearLayout
                android:id="@+id/watch_video_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_medium"
                android:layout_marginBottom="@dimen/activity_padding_medium"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:src="@drawable/watch_video"
                    android:layout_marginStart="@dimen/activity_padding_medium"
                    android:layout_marginEnd="@dimen/activity_padding_medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="@dimen/activity_margin_quarter"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:textColor="@color/colorPrimary"
                    android:text="Watch the video"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/watch_document_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_medium"
                android:layout_marginBottom="@dimen/activity_padding_medium"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:src="@drawable/document"
                    android:backgroundTint="@color/red"
                    android:layout_marginStart="@dimen/activity_padding_medium"
                    android:layout_marginEnd="@dimen/activity_padding_medium"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="@font/roboto"
                    android:layout_marginStart="@dimen/activity_margin_quarter"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    android:textColor="@color/colorPrimary"
                    android:text="View Attachment"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:visibility="visible"
        android:background="@color/border_color_opacity"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"/>


</LinearLayout>
