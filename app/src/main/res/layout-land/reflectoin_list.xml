<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginTop="@dimen/activity_margin_quarter"
    android:layout_marginBottom="@dimen/activity_margin_quarter"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:background="@drawable/card_bg_light_white"
    android:outlineSpotShadowColor="@color/card_light_shadow"
    app:cardCornerRadius="10dp"
    tools:targetApi="p">
    <LinearLayout
        android:id="@+id/main_block_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/activity_margin_half"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="@dimen/activity_margin_quarter"
            android:layout_marginStart="@dimen/activity_margin_quarter"
            android:layout_marginEnd="@dimen/activity_margin_quarter"
            android:textAlignment="textStart"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_date_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingStart="@dimen/activity_padding_medium"
            android:paddingEnd="@dimen/activity_padding_medium"
            android:text="date"
            android:textAlignment="textStart"
            android:textColor="@color/border_color"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>

</androidx.cardview.widget.CardView>