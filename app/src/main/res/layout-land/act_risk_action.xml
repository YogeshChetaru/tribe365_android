<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Risk.Act_RiskAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <include layout="@layout/app_bar" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_margin_big"
            android:layout_marginEnd="@dimen/activity_margin_big"
            android:orientation="vertical">
            <TextView
                android:id="@+id/action_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:paddingStart="@dimen/activity_margin_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:fontFamily="@font/roboto_medium"
                android:textAlignment="textStart"
                android:textSize="@dimen/text_size_big"/>
            <TextView
                android:id="@+id/action_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginTop="@dimen/activity_padding_medium"
                android:layout_marginBottom="@dimen/activity_padding_medium"
                android:layout_gravity="start|center_vertical"
                android:paddingEnd="@dimen/activity_margin"
                android:paddingStart="@dimen/activity_margin_half"
                android:textColor="@color/textcolor"
                android:textAlignment="textStart"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/activity_margin_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/action_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="@dimen/text_size_normal"
                android:paddingStart="@dimen/activity_margin_quarter"
                android:textColor="@color/light_color"
                android:textAlignment="textStart"/>
                <TextView
                    android:id="@+id/action_risk_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/text_size_normal"
                    android:textAlignment="textStart"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:id="@+id/action_risk_level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/text_size_normal"
                    android:textAlignment="textStart"
                    android:textColor="@color/light_color"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginTop="@dimen/activity_padding_medium"
                android:layout_marginBottom="@dimen/activity_padding_medium"
                android:paddingStart="@dimen/activity_margin_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/num_offload_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/text_size_small"
                    android:layout_gravity="start|center_vertical"
                    android:paddingEnd="@dimen/activity_margin"
                    android:paddingStart="@dimen/activity_padding_medium"
                    android:textColor="@color/red"
                    android:textAlignment="textStart"/>
            </LinearLayout>


                  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                      android:layout_marginTop="@dimen/activity_padding_medium"
                    android:padding="@dimen/activity_margin_half"
                    android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/roboto_medium"
                android:layout_gravity="bottom"
                android:textSize="@dimen/text_size_big"
                android:paddingStart="@dimen/activity_padding_medium"
                android:paddingEnd="@dimen/activity_padding_medium"
                android:paddingBottom="-4dp"
                android:paddingTop="@dimen/activity_padding_half"
                android:text="Actions"/>

                      <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/bg_spinner">

                        <Spinner
                            android:id="@+id/risk_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_margin_half">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_action_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:id="@+id/app_tour_action_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/activity_padding_medium"
                                android:visibility="gone"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/user_black" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="John Smith"
                                    android:textSize="@dimen/text_size_normal" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/iv_chat"
                                        android:layout_width="20dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginEnd="0dp"
                                        android:src="@drawable/comment"
                                        android:textSize="@dimen/text_size_small"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_tier"
                                        android:layout_width="60dp"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center"
                                        android:fontFamily="@font/roboto"
                                        android:padding="2dp"
                                        android:text="Primary"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/text_size_very_small"
                                        android:visibility="gone" />
                                </RelativeLayout>


                            </LinearLayout>



                            <TextView
                                android:id="@+id/show_app_tour_tv"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentEnd="true"
                                android:visibility="gone"
                                android:fontFamily="@font/roboto"
                                android:gravity="bottom"
                                android:layout_margin="@dimen/activity_margin_half"/>
                            <TextView
                                android:id="@+id/no_action_found_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/rv_action_list"
                                android:visibility="gone"
                                android:layout_marginTop="-12dp"
                                android:textColor="@color/textcolorsecondary"
                                android:text="No actions added yet"
                                android:fontFamily="@font/roboto"
                                android:gravity="start|center"
                                android:textSize="@dimen/text_size_normal"
                                android:layout_margin="@dimen/activity_margin_half"/>
                              <com.google.android.material.floatingactionbutton.FloatingActionButton
                                android:id="@+id/fab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:layout_marginBottom="55dp"
                                android:layout_marginEnd="@dimen/activity_padding_medium"
                                android:backgroundTint="@color/colorPrimary"
                                android:contentDescription="@string/app_name"
                                app:borderWidth="0dp"
                                app:elevation="2dp"
                                app:srcCompat="@drawable/plus" />
                            <TextView
                                android:id="@+id/tv_error_msg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="No action found"
                                android:fontFamily="@font/roboto"
                                android:gravity="center"
                                android:visibility="gone"
                                android:textSize="@dimen/text_size_normal"
                                android:padding="@dimen/activity_padding_medium"
                                android:textColor="@color/textcolor"/>
                        </RelativeLayout>


                </LinearLayout>

        </LinearLayout>


        </ScrollView>
    </LinearLayout>
    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>