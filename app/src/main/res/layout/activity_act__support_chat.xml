<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.CustomerSupport.Act_SupportChat">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_padding_medium"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/cv_sendmsg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="end"
                    android:textAlignment="viewEnd"
                    app:stackFromEnd="true">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_sendmsg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_send"
                    android:layout_toStartOf="@+id/iv_send"
                    android:layout_weight="9"
                    android:background="@android:color/transparent"
                    android:gravity="bottom"
                    android:fontFamily="@font/roboto"
                    android:hint="Type your message"
                    android:padding="5dp"
                    android:paddingStart="10dp"
                    android:textSize="@dimen/text_size_normal"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <ImageView
                    android:id="@+id/iv_attachment"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:padding="3dp"
                    android:src="@drawable/ic_attachment" />

                <ImageView
                    android:id="@+id/iv_send"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_chat_circle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="#e2e2e2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="12">


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_send"
                android:layout_toStartOf="@+id/iv_send"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:gravity="bottom"
                android:fontFamily="@font/roboto"
                android:hint="Type your message"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:textSize="@dimen/text_size_normal" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_weight="1.5"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:padding="3dp"
                android:src="@drawable/ic_send_arraow_red"
                android:text="Send"
                tools:ignore="HardcodedText" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>