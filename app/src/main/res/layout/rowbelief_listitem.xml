<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/activity_padding_medium"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_margin_half"
        >

        <TextView
            android:id="@+id/tv_belief_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|start"
            android:paddingStart="@dimen/activity_margin_quarter"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_today_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center|end"
            android:paddingEnd="@dimen/activity_margin_quarter"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_normal"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
    </LinearLayout>

