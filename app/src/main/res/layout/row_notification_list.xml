<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    app:dragEdge="right"
    app:mode="same_level">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:text="More"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:textSize="@dimen/text_size_normal"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="10dp"
            android:src="@drawable/edit_white"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="Edit"
            android:fontFamily="@font/roboto"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_mainBlock"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/activity_padding_medium"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_logo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/app_name"
                                android:padding="10dp"
                                android:src="@drawable/ic_like_hollow_green" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/tv_title_by"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="by "
                                    android:visibility="gone"
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/text_size_very_small"
                                    app:autoSizeMaxTextSize="60dp"
                                    app:autoSizeMinTextSize="40dp"
                                    tools:ignore="ObsoleteLayoutParam,SmallSp,TooDeepLayout" />


                                <TextView
                                    android:id="@+id/tv_notiName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="2dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto_medium"
                                    android:maxLines="1"
                                    android:text="notification"
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="normal"
                                    app:autoSizeMaxTextSize="60dp"
                                    app:autoSizeMinTextSize="40dp"
                                    tools:ignore="HardcodedText" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/des_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:orientation="vertical"
                                android:visibility="visible">


                                <TextView
                                    android:id="@+id/tv_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginStart="5dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/roboto"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/text_size_very_small"
                                    app:autoSizeMaxTextSize="60dp"
                                    app:autoSizeMinTextSize="40dp"
                                    tools:ignore="ObsoleteLayoutParam,SmallSp,TooDeepLayout" />


                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/action_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_date_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="3dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="1dp"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="start|top"
                                    android:text="Due Date:"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/text_size_very_small"
                                    android:visibility="gone"
                                    tools:ignore="ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                                <TextView
                                    android:id="@+id/tv_date_action"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/roboto"
                                    android:gravity="start|top"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/text_size_very_small"
                                    android:visibility="gone"
                                    tools:ignore="ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/date_ll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="2dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/link_button"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/activity_padding_medium"
                                    android:background="@drawable/sign_rnd_button"
                                    android:gravity="center"
                                    android:padding="@dimen/activity_margin_quarter"
                                    android:text="Open  Link"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_small"
                                    android:visibility="visible"
                                    tools:ignore="HardcodedText,SmallSp" />

                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="3dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="right|top"
                                    android:fontFamily="@font/roboto"
                                    android:text=""
                                    android:textColor="@color/textcolor"
                                    android:textSize="@dimen/text_size_very_small"
                                    tools:ignore="ObsoleteLayoutParam,RtlHardcoded,SmallSp" />

                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/field_back" />
        </LinearLayout>

    </FrameLayout>


</com.apachat.swipereveallayout.core.SwipeLayout>