<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_graph_number"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_normal" />

            <!--<View-->
            <!--android:layout_width="0.5dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@color/bg_graph_color" />-->

            <TextView
                android:id="@+id/tv_motivation_graph_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".6"
                android:padding="5sp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_medium" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight=".3">

                <TextView
                    android:id="@+id/tv_bg_motivation_graph_score"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/activity_padding_medium" />

                <TextView
                    android:id="@+id/tv_motivation_graph_score"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end|center"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size_medium" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="#bdbfbe"
            android:visibility="gone" />


</LinearLayout>