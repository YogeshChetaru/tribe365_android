<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/left_right_margin"
    android:background="@color/colorTransparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_header"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/activity_padding_medium"
                android:layout_weight=".1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding_medium"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_padding_medium"
                android:layout_weight=".8"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin_half">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="Congratulations!"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/roboto"
                    android:text="Kudos Champion"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dia_Cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/activity_padding_medium"
                android:layout_weight=".1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding_medium">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_cancel" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/slide_title"
            android:background="@drawable/dialog_bg_footer"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin_half">

            <TextView
                android:id="@+id/dia_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:text="You have earned the highest Kudos this month. Well Done!"
                android:textColor="@color/dia_textcolor"
                android:textSize="@dimen/text_size_small" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/dia_user_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="10dp"
                    app:civ_border_color="@color/white" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@id/dia_user_image"
                    android:layout_alignTop="@id/dia_user_image"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="-25dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="crown"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_crown" />

            </RelativeLayout>


            <TextView
                android:id="@+id/dia_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textAllCaps="true"
                android:textColor="@color/dia_textcolor"
                android:textSize="@dimen/text_size_big" />

            <TextView
                android:id="@+id/dia_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textColor="@color/dia_textcolor"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:id="@+id/dia_value_button"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/roundedbutton"
                android:paddingTop="2dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

