<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".UI.Home.Act_FreeVersionHome">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="@dimen/activity_margin"
            android:baselineAligned="false">
            <LinearLayout
                android:id="@+id/icon_image"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:orientation="vertical"

                android:layout_gravity="start|center"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/iv_top_companylogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/activity_padding_medium"
                    android:src="@drawable/icon_tribe365"
                    android:adjustViewBounds="true"
                    android:padding="@dimen/activity_margin_half"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="@dimen/activity_margin_quarter"
                    android:layout_marginRight="@dimen/activity_margin_quarter"
                    android:contentDescription="@string/app_name"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_user_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_big" />



                <TextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium" />
                <TextView
                    android:id="@+id/tv_designation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/activity_padding_medium"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/menu_option"
                android:layout_width="0dp"
                android:layout_weight=".1"
                android:orientation="vertical"
                android:layout_gravity="end|center_vertical"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_margin_quarter"
                android:paddingTop="@dimen/activity_margin_quarter"
                android:paddingStart="@dimen/activity_margin_quarter"
                android:paddingEnd="@dimen/activity_margin_quarter"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/red_menu_dot"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginTop="@dimen/activity_padding_medium"
                    android:layout_marginBottom="@dimen/activity_padding_medium"
                    android:layout_marginStart="@dimen/activity_padding_medium"
                    android:layout_marginEnd="@dimen/activity_padding_medium"
                    android:contentDescription="@string/app_name"
                    />

            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/absent_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:layout_marginBottom="@dimen/activity_padding_medium"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:gravity="center"
                android:padding="@dimen/activity_padding_medium"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="@dimen/activity_margin_quarter"
                    android:padding="@dimen/activity_padding_medium"
                    android:textSize="@dimen/text_size_big"
                    android:text="@string/out_of_office_mode_enabled"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_happy_index_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            android:paddingStart="@dimen/activity_padding_half"
            android:paddingEnd="@dimen/activity_padding_half"
            android:visibility="visible"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_padding_half"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="@color/red"
            android:background="@drawable/custom_cardview_no_top_shadow"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/msgqueTxt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin_half"
                    android:padding="@dimen/activity_padding_half"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:scrollbars="vertical"
                    android:text="@string/how_s_things_at_work_today"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/activity_margin"
                    android:layout_marginStart="@dimen/activity_margin"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:layout_weight=".5"/>

                    <ImageView
                        android:id="@+id/happy_image"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/happy"
                        />

                    <ImageView
                        android:id="@+id/neutral_image"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/neutral"
                        android:textSize="@dimen/text_size_big" />

                    <ImageView
                        android:id="@+id/sad_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:src="@drawable/sad"
                        android:textSize="@dimen/text_size_big" />
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/app_name"
                        android:layout_weight=".5"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/absent_Txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_padding_half"
                    android:gravity="center"
                    android:visibility="visible"
                    android:layout_marginBottom="@dimen/activity_margin_half"
                    android:fontFamily="@font/roboto_medium"
                    android:scrollbars="vertical"
                    android:autoLink="none"
                    android:text="@string/i_am_not_in_work_today"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_big" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="@dimen/activity_padding_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:text="@string/sentiment_index"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_big" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="@dimen/activity_margin_half"
                android:padding="@dimen/activity_padding_medium"
                android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_office"
                android:layout_width="match_parent"
                android:layout_gravity="end"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_padding_medium"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:visibility="visible" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_margin="@dimen/activity_margin_half"
                    android:padding="@dimen/activity_padding_medium"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/sp_department"
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_padding_medium"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/activity_margin_half"
                    android:layout_margin="@dimen/activity_margin_half"
                    android:layout_gravity="center_vertical">

                    <Spinner
                        android:id="@+id/sp_month"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:entries="@array/month"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_quarter"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        />
                    <Spinner
                        android:id="@+id/sp_year"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="end"
                        android:gravity="end|center_vertical"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_margin_quarter"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:visibility="visible" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/show_calender_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/activity_padding_medium"
                    android:layout_marginBottom="@dimen/activity_padding_medium"
                    android:weightSum="7"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/sun"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_medium" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/mon"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/tue"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/wed"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/thu"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/fri"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/roboto_medium"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/sat"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/roboto_medium"/>
                </LinearLayout>
                 <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calender_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_margin"
                    android:paddingTop="@dimen/activity_margin_half"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/show_empty_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_margin"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:text="@string/no_records_found"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/show_hptm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/roboto_medium"
            android:text="HPTM"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>