<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_margin="@dimen/activity_margin"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/activity_margin_quarter"
        android:layout_margin="@dimen/activity_margin">

            <TextView
                android:id="@+id/dialog_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="@dimen/activity_margin_half"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_big"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:layout_margin="@dimen/activity_margin_quarter"
                android:textSize="@dimen/text_size_medium"
                android:text="@string/engagement_index" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:padding="@dimen/activity_margin_quarter"
                android:gravity="center"
                android:layout_margin="@dimen/activity_margin">


            <ImageView
                android:id="@+id/eng_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/eng_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_margin_quarter"
                    android:gravity="start|center"
                    android:padding="@dimen/activity_margin_quarter"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/color_green"
                    android:textSize="@dimen/text_size_very_big"
                    />
            </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>