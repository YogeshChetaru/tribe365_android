<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/player_colorTransparent"
    android:gravity="center"
    tools:context=".UI.AppTour.Link_click_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/top_text_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:background="@drawable/rouned_corner_shadow"
            app:cardCornerRadius="15dp"
            android:padding="@dimen/activity_padding_medium"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_margin_half"
                    android:paddingBottom="@dimen/activity_margin_half">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back_image"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_arrow_back_24"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/title_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/activity_padding_half"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="@string/app_name"
                            android:textAllCaps="true"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_big" />

                        <ImageView
                            android:id="@+id/close_image"
                            android:layout_width="30dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/sub_title_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:text="@string/app_name"
                        android:textColor="@color/border_color"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/edit_bg" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/text_show_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/activity_margin_half">

                        <TextView
                            android:id="@+id/text_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/activity_padding_half"
                            android:textStyle="normal"
                            android:fontFamily="@font/roboto_medium"
                            android:textAlignment="textStart"
                            android:scrollbars="vertical"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_video_link"
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/activity_padding_medium"
                            android:fontFamily="@font/roboto_medium"
                            android:background="@drawable/sign_rnd_button"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/activity_margin_12"
                            android:text="Watch Video"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium" />
                    </LinearLayout>
                </ScrollView>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/bottom_text_click"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5" />
    </LinearLayout>

</LinearLayout>