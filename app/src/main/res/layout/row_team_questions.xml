<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="@dimen/activity_padding_medium"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding_medium"
            android:layout_marginEnd="@dimen/activity_padding_medium"
            android:layout_marginTop="@dimen/activity_padding_medium"
            android:paddingStart="@dimen/activity_margin_half"
            android:paddingEnd="@dimen/activity_margin_half"
            android:paddingTop="@dimen/activity_padding_medium"
            android:paddingBottom="@dimen/activity_padding_medium"
            android:background="@drawable/question_bg_rounded"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_question_num"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle_red"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_team_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:layout_marginStart="@dimen/activity_padding_medium"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/activity_padding_medium"
                android:textAlignment="textStart"
                android:textColor="@color/dot_3"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_options_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_half"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginStart="@dimen/activity_padding_medium"
            android:layout_marginEnd="@dimen/activity_padding_medium"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>