<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:gravity="start"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_marginStart="@dimen/activity_padding_medium"
    android:layout_marginEnd="@dimen/activity_padding_medium"
    android:layout_marginBottom="@dimen/activity_margin_quarter"
    android:layout_marginTop="@dimen/activity_margin_quarter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:gravity="start"
        android:padding="@dimen/activity_margin_half"
        android:orientation="horizontal">
        <com.chetaru.tribe365_new.utility.MyCircleImageView
            android:id="@+id/person_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="visible"
            android:src="@drawable/user_circle"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            app:civ_border="false"
            />
        <TextView
            android:id="@+id/person_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/activity_padding_half"
            android:paddingEnd="@dimen/activity_padding_half"
            android:layout_gravity="start|center"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_normal"
            android:gravity="start|center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/activity_padding_medium"
        android:layout_marginBottom="@dimen/activity_margin_quarter"
        android:background="@color/edit_bg"/>

</androidx.cardview.widget.CardView>