<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_padding_medium"
        android:layout_marginRight="@dimen/activity_padding_medium"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding_medium"
            android:layout_marginEnd="@dimen/activity_padding_medium"
            android:layout_marginTop="@dimen/activity_margin_quarter"
            android:layout_marginBottom="@dimen/activity_margin_quarter"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_top_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/tribe_365"
                android:paddingTop="@dimen/activity_padding_half"
                android:scaleType="fitStart"
                android:src="@drawable/ic_arrow_back_black"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop" />
            <ImageView
                android:id="@+id/tribe365"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/activity_margin_quarter"
                android:layout_marginEnd="@dimen/activity_margin_quarter"
                android:layout_weight="4"
                android:layout_gravity="start|center"
                android:contentDescription="@string/tribe_365"
                android:paddingTop="@dimen/activity_padding_medium"
                android:paddingBottom="@dimen/activity_padding_medium"
                android:paddingEnd="@dimen/activity_margin_quarter"
                android:paddingStart="@dimen/activity_margin_quarter"
                android:scaleType="fitStart"
                android:src="@drawable/app_icon" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        app:cardCornerRadius="4dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <TextView
                                android:id="@+id/detail_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="DETAILS"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_size_medium"
                                tools:ignore="HardcodedText" />


                            <androidx.cardview.widget.CardView
                                android:id="@+id/rv_img"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/detail_text"
                                android:background="@color/white"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/iv_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_below="@+id/detail_text"
                                    android:contentDescription="@string/app_name"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/noimage_big"
                                    android:visibility="gone">

                                </ImageView>

                            </androidx.cardview.widget.CardView>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rv_img"
                                android:layout_marginTop="2dp">



                                <LinearLayout
                                    android:id="@+id/linear_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="10dp"
                                        android:layout_weight="1.5"
                                        android:fontFamily="@font/roboto"
                                        android:gravity="center|left"
                                        android:text=" 2018-08-10 11:45:22 "
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/text_size_small"
                                        tools:ignore="HardcodedText,SmallSp" />





                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:text="Description:"
                                    android:textColor="@color/textcolor"
                                    android:fontFamily="@font/roboto"
                                    android:textSize="@dimen/text_size_normal"
                                    android:visibility="gone"
                                    tools:ignore="HardcodedText" />

                                <TextView
                                    android:id="@+id/tv_desc"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_below="@+id/linear_layout"
                                    android:fontFamily="@font/roboto"
                                    android:padding="@dimen/activity_margin_half"
                                    android:scrollbars="vertical"
                                    android:text=""
                                    android:textSize="@dimen/text_size_small"
                                    tools:ignore="HardcodedText" />

                            </RelativeLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gry"
                android:visibility="visible">

            </View>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="60dp">

                </androidx.recyclerview.widget.RecyclerView>



                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_sendmsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"
                    app:contentPaddingTop="@dimen/activity_margin_half"
                    app:contentPaddingBottom="@dimen/activity_margin_half"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    app:cardBackgroundColor="@color/field_back"
                    app:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_attachment"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_weight="1.5"
                            android:contentDescription="@string/app_name"
                            android:gravity="center"
                            android:padding="3dp"
                            android:src="@drawable/ic_attachment"
                            tools:ignore="ObsoleteLayoutParam" />

                        <EditText
                            android:id="@+id/et_msg"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_send"
                            android:layout_toStartOf="@+id/iv_send"
                            android:fontFamily="@font/roboto"
                            android:layout_weight="9"
                            android:background="@drawable/rect_coner_white_blackborder"
                            android:gravity="bottom"
                            android:inputType="textImeMultiLine|textMultiLine"
                            android:hint="New message"
                            android:padding="@dimen/activity_margin_half"
                            android:textSize="@dimen/text_size_normal"
                            tools:ignore="HardcodedText,ObsoleteLayoutParam" />


                        <TextView
                            android:id="@+id/iv_send"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_medium"
                            android:text="Send"
                            android:textSize="@dimen/text_size_big"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>
    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
