<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<androidx.cardview.widget.CardView
    android:id="@+id/main_card_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin_half"
    app:cardCornerRadius="35dp"
    app:cardElevation="2dp"
   >
    <LinearLayout
        android:id="@+id/top_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
                 <TextView
                    android:id="@+id/kudos_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="clear"
                    android:maxLines="2"
                     android:layout_marginTop="@dimen/activity_padding_medium"
                     android:layout_marginStart="@dimen/activity_margin_quarter"
                     android:layout_marginEnd="@dimen/activity_margin_quarter"
                    android:textSize="@dimen/text_size_medium"
                    android:padding="@dimen/activity_margin_quarter"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/roboto_medium"
                    app:autoSizeMaxTextSize="@dimen/text_size_medium"
                    app:autoSizeMinTextSize="@dimen/text_size_very_small"
                    app:autoSizeTextType="uniform"
                    />
        <androidx.cardview.widget.CardView
            android:id="@+id/value_card_ll"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="end|bottom"
            tools:ignore="VectorDrawableCompat"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                >

                <TextView
                    android:id="@+id/kudos_value_tv"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/activity_margin_quarter"
                    android:layout_marginTop="@dimen/activity_padding_medium"
                    android:fontFamily="@font/roboto_medium"
                    android:foregroundGravity="center"
                    android:gravity="end|center|bottom"
                    android:padding="@dimen/activity_margin_quarter"
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/text_size_normal" />
                <TextView
                    android:id="@+id/amazing_value_tv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:fontFamily="@font/roboto_medium"
                    android:foregroundGravity="bottom"
                    android:gravity="end|bottom|center"
                    android:layout_below="@+id/kudos_value_tv"
                    android:textColor="@color/black"
                    android:padding="@dimen/activity_margin_quarter"
                    android:layout_marginStart="@dimen/activity_margin_quarter"
                    android:layout_marginBottom="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_normal"
                    tools:ignore="SmallSp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</FrameLayout>