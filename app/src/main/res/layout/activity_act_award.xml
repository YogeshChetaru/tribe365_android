<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Home.Act_Award">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/bg_white"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin">
        <LinearLayout
            android:id="@+id/iv_top_back_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/activity_padding_medium"
            android:layout_centerInParent="true"
            android:layout_gravity="start|center_vertical"
            android:layout_toStartOf="@+id/cv_index_eng"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_top_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/tribe_365"
                android:paddingTop="@dimen/activity_padding_half"
                android:scaleType="fitStart"
                android:src="@drawable/ic_arrow_back_black"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop" />
            <ImageView
                android:id="@+id/iv_top_companylogo"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:contentDescription="@string/tribe_365"
                app:srcCompat="@drawable/icon_tribe365" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_index_eng"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half"
                android:paddingBottom="@dimen/activity_margin_half"
                android:layout_gravity="end|center"
                android:background="@drawable/custom_cardview_no_top_shadow"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/activity_margin_half"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/index_eng_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:contentDescription="@string/app_name"
                        android:padding="@dimen/activity_padding_medium"
                        android:src="@drawable/low" />

                    <TextView
                        android:id="@+id/tv_index_eng_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/motion_index_low"
                        android:textSize="@dimen/text_size_medium" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_notification"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/iv_notic"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name"
                android:gravity="end|bottom"
                android:src="@drawable/ic_bell"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tv_notiCount"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_circle_hollow_red"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_very_small"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:padding="@dimen/activity_padding_half"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="@dimen/activity_padding_half"
                android:layout_marginEnd="@dimen/activity_padding_half"
                android:text="Awards"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/show_award_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_padding_half"
                />
        </LinearLayout>
    </LinearLayout>
    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>