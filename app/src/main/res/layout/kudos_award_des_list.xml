<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/activity_padding_medium"
    android:padding="@dimen/activity_padding_medium"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_padding_half"
        android:paddingBottom="@dimen/activity_padding_half"
        android:paddingStart="@dimen/activity_margin_half"
        android:paddingEnd="@dimen/activity_margin_half"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin_quarter"
            android:orientation="vertical">

            <TextView
                android:id="@+id/award_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|start"
                android:paddingStart="@dimen/activity_margin_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_normal" />
            <TextView
                android:id="@+id/award_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|start"
                android:visibility="visible"
                android:paddingStart="@dimen/activity_margin_half"
                android:paddingEnd="@dimen/activity_margin_half"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_margin_quarter"
        android:layout_marginBottom="@dimen/activity_margin_quarter"
        android:layout_marginStart="@dimen/activity_padding_half"
        android:layout_marginEnd="@dimen/activity_margin_quarter"
        android:orientation="horizontal">
        <com.chetaru.tribe365_new.utility.MyCircleImageView
            android:id="@+id/person_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="visible"
            android:src="@drawable/user_circle"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            app:civ_border="false"
            />
        <TextView
            android:id="@+id/award_person_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center|start"
            android:visibility="visible"
            android:paddingTop="@dimen/activity_margin_quarter"
            android:paddingStart="@dimen/activity_padding_medium"
            android:paddingEnd="@dimen/activity_margin_quarter"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_normal" />


    </LinearLayout>
        <TextView
            android:id="@+id/award_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center|end"
            android:paddingTop="@dimen/activity_margin_quarter"
            android:paddingStart="@dimen/activity_margin_half"
            android:paddingEnd="@dimen/activity_margin_half"
            android:paddingBottom="@dimen/activity_margin_quarter"
            android:textColor="@color/date_color"
            android:textSize="@dimen/text_size_very_small"
            tools:ignore="SmallSp" />
    </LinearLayout>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height=".5dp"
        android:paddingStart="@dimen/activity_margin"
        android:paddingEnd="@dimen/activity_margin"
        android:background="@color/border_color"
        android:layout_marginTop="@dimen/activity_padding_medium"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_padding_medium"/>

</androidx.cardview.widget.CardView>