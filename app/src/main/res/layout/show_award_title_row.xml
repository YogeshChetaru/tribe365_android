<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/activity_padding_half"
    android:layout_marginEnd="@dimen/activity_padding_half"
    android:layout_marginTop="@dimen/activity_margin_quarter"
    android:layout_marginBottom="@dimen/activity_margin_quarter"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding_medium"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_padding_medium"
        android:paddingEnd="@dimen/activity_padding_medium"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/award_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/activity_padding_medium"
            android:singleLine="true"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_medium" />
        <TextView
            android:id="@+id/award_value_tv"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:text=""
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:padding="@dimen/activity_padding_medium"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_medium"/>

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/expand_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/app_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_padding_medium"
        android:paddingEnd="@dimen/activity_padding_medium"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/award_desc_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/award_load_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_medium"
            android:visibility="gone"
            android:padding="@dimen/activity_padding_half"
            android:singleLine="true"
            android:text="Load more"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>