<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00813939"
    android:gravity="center"
    android:orientation="vertical">
    <!--android:background="@android:color/transparent"-->
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00A86868"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/bg_solid_grey_rounded"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msgqueTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:scrollbars="vertical"
                android:text="How's things at \n work today?"
                android:textColor="@color/navigationBarColor"
                android:textSize="@dimen/text_size_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/happy"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/happy"
                    android:textSize="@dimen/text_size_big" />

                <ImageView
                    android:id="@+id/neutral"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/neutral"
                    android:textSize="@dimen/text_size_big" />

                <ImageView
                    android:id="@+id/sad"
                    android:layout_width="30dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/sad"
                    android:textSize="@dimen/text_size_big" />
            </LinearLayout>
        </LinearLayout>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_circle_hollow"
            android:padding="5dp"
            android:src="@drawable/ic_feedback" />


    </RelativeLayout>

</LinearLayout>