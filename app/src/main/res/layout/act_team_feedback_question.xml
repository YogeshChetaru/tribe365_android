<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.UserInfo.Act_TeamFeedback_Question">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:layout_marginBottom="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_padding_medium"
            android:layout_marginEnd="@dimen/activity_padding_medium"
            android:layout_marginTop="@dimen/activity_margin_quarter"
            android:layout_marginBottom="@dimen/activity_margin_quarter"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_top_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/tribe_365"
                android:paddingTop="@dimen/activity_padding_half"
                android:scaleType="fitStart"
                android:src="@drawable/ic_arrow_back_black"
                android:visibility="visible"
                tools:ignore="VectorDrawableCompat"
                tools:targetApi="lollipop" />
            <ImageView
                android:id="@+id/tribe365"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/activity_margin_quarter"
                android:layout_marginEnd="@dimen/activity_margin_quarter"
                android:layout_weight="4"
                android:layout_gravity="start|center"
                android:contentDescription="@string/tribe_365"
                android:paddingTop="@dimen/activity_padding_medium"
                android:paddingBottom="@dimen/activity_padding_medium"
                android:paddingEnd="@dimen/activity_margin_quarter"
                android:paddingStart="@dimen/activity_margin_quarter"
                android:scaleType="fitStart"
                android:src="@drawable/app_icon" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/border_color_opacity"/>

        <TextView
            android:id="@+id/tv_team_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/activity_margin_half"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:layout_marginTop="@dimen/activity_padding_medium"
            android:layout_marginBottom="@dimen/activity_padding_medium"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/activity_margin_half"
            android:textAllCaps="false"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="HardcodedText,MissingClass" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_team_question"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:layout_marginStart="@dimen/activity_margin_half"
                android:padding="@dimen/activity_padding_medium" />

            <Button
                android:id="@+id/btn_submit_team_Qus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_marginStart="@dimen/activity_margin"
                android:layout_marginEnd="@dimen/activity_margin"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:background="@drawable/sign_rnd_button"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium"
                tools:ignore="HardcodedText" />
        </LinearLayout>




    </LinearLayout>
    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>