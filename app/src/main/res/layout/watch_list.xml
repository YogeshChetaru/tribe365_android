<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/activity_padding_medium"
    android:background="@color/white"
    app:cardElevation="2dp"
    app:cardCornerRadius="5dp"
    android:padding="@dimen/activity_margin_quarter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding_medium"
            android:layout_margin="@dimen/activity_padding_medium"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_option"
                android:layout_gravity="start|center_vertical"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:padding="@dimen/activity_margin_quarter"
                android:visibility="gone"
                android:src="@drawable/circle_unchecked"
                android:contentDescription="@string/app_name"
                />


            <TextView
                android:id="@+id/tv_title_watch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_padding_medium"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="start"
                android:padding="@dimen/activity_margin_quarter"
                android:textAlignment="textStart"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size_medium" />
            <ImageView
                android:id="@+id/expand_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow_right_24"
                android:layout_marginEnd="@dimen/activity_padding_medium"
                android:layout_marginStart="@dimen/activity_padding_medium"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/border_color_opacity"
            android:layout_marginStart="@dimen/activity_margin"
            android:layout_marginEnd="@dimen/activity_margin"/>
        <LinearLayout
            android:id="@+id/show_child_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_child"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>